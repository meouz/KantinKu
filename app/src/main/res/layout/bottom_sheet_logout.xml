<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top"
    android:padding="24dp">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Keluar Akun"
        android:textColor="@color/error_500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="apakah anda yakin ingin keluar dari akun anda?"
        android:textAlignment="center"
        android:textColor="@color/neutral_400"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <TextView
        android:id="@+id/btnAccept"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border_16"
        android:backgroundTint="@color/error_500"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Yakin"
        android:textColor="@color/error_500"
        app:layout_constraintEnd_toStartOf="@+id/btnCancel"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="156dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_rounded_16"
        android:backgroundTint="@color/error_500"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Tidak"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAccept"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

</androidx.constraintlayout.widget.ConstraintLayout>